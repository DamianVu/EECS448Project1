<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="wubbalubbadubdub.eecs448project1.AddEventActivity"
    tools:layout_editor_absoluteY="89dp"
    tools:layout_editor_absoluteX="0dp">

    <TextView
        android:id="@+id/tvWelcome"
        android:layout_width="202dp"
        android:layout_height="0dp"
        android:text="Add event"
        android:textSize="21dp"
        tools:layout_editor_absoluteX="570dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="16dp" />

    <TextView
        android:id="@+id/tvEventName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="Event Name:"
        tools:layout_editor_absoluteY="101dp"
        tools:layout_editor_absoluteX="570dp" />

    <EditText
        android:id="@+id/textName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:text=""
        android:layout_marginStart="111dp"
        tools:layout_editor_absoluteX="570dp"
        tools:layout_editor_absoluteY="131dp" />

    <TextView
        android:id="@+id/tvSelectEvent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Select Event Time Slots: Each Timeslot is a 30 minute period"
        android:layout_marginStart="16dp"
        tools:layout_editor_absoluteY="280dp"
        tools:layout_editor_absoluteX="16dp" />

    <Button
        android:id="@+id/saveButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Save"
        android:layout_marginEnd="31dp"
        tools:layout_editor_absoluteY="597dp"
        tools:layout_editor_absoluteX="1161dp" />

    <TextView
        android:id="@+id/tvSelectedTimes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Selected Times: NONE"
        android:layout_marginStart="16dp"
        tools:layout_editor_absoluteY="544dp"
        tools:layout_editor_absoluteX="16dp" />


    <TextView
        android:id="@+id/tvKeyAvailable"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@android:color/holo_green_light"
        android:padding="5dp"
        android:text="Available"
        tools:layout_editor_absoluteY="436dp"
        tools:layout_editor_absoluteX="1162dp" />

    <ToggleButton
        android:id="@+id/tbTimeFormat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Time Format"
        android:textOff="12h"
        android:textOn="24h"
        android:onClick="toggleFormat"
        android:layout_marginEnd="31dp"
        tools:layout_editor_absoluteY="483dp"
        tools:layout_editor_absoluteX="1161dp" />

    <TableLayout
        android:id="@+id/tbLayout"
        android:layout_width="wrap_content"
        android:layout_height="200dp"
        android:layout_marginStart="16dp"
        tools:layout_editor_absoluteY="323dp"
        tools:layout_editor_absoluteX="16dp" />

    <TextView
        android:id="@+id/tvKeyReserved"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@android:color/holo_red_light"
        android:padding="5dp"
        android:text="Reserved"
        android:layout_marginEnd="51dp"
        tools:layout_editor_absoluteY="398dp"
        tools:layout_editor_absoluteX="1162dp" />

    <DatePicker
        android:id="@+id/datePicker"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="16dp" />

</android.support.constraint.ConstraintLayout>
